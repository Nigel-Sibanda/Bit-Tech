<body>
	<!-- Add button -->
	<button onclick="openForm()">New Risk</button>

	<!-- Form container -->
	<div id="form-container" class="form-container">
		<!-- Form -->
		<form id="add-item-form" class="form" style="display: none;">
			<!-- Name input with placeholder -->
			<label for="name">Name:</label>
			<input type="text" id="name" name="name" placeholder="Enter name..." required>

  <br>
			<!-- Description input with placeholder -->
			<label for="description">Description:</label>
			<textarea id="description" name="description" placeholder="Enter description..." required></textarea>
			
			<br>

			<!-- Status input with radio buttons -->
			<label>Status:</label><br>
			<input type="radio" id="open" name="status" value="Open" checked>
			<label for="open">Open</label><br>
			<input type="radio" id="closed" name="status" value="Closed">
			<label for="closed">Closed</label><br>

			<!-- Likelihood input with placeholder -->
			<label for="likelihood">Likelihood:</label>
			<input type="number" id="likelihood" name="likelihood" placeholder="Enter likelihood..." required>

			<!-- Submit and close buttons -->
			<div>
				<button type="submit">Submit</button>
				<button type="button" class="close" onclick="closeForm()">Close</button>
			</div>
		</form>
	</div>

	<script>
		// Function to open the form
		function openForm() {
			document.getElementById("add-item-form").style.display = "block";
			document.getElementById("form-container").style.display = "flex";
		}

		// Function to close the form
		function closeForm() {
			document.getElementById("add-item-form").style.display = "none";
			document.getElementById("form-container").style.display = "none";
		}
	</script>
